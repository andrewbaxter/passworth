{
  "manifest_version": 3,
  "name": "Passworth",
  "description": "Fill username, password, OTP fields directly from Passworth",
  "homepage_url": "https://github.com/andrewbaxter/passworth",
  "version": "_PLACEHOLDER_VERSION",
  "author": "Andrew Baxter",
  "icons": {
    "48": "icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self' 'wasm-unsafe-eval'; script-src 'self' 'wasm-unsafe-eval'"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": "icon.svg",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}